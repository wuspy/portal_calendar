{
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules/*"],
	"compilerOptions": {
        "module": "ESNext",
		"moduleResolution": "bundler",
        "target": "es2017",
        "verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
    },
}